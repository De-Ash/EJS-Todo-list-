<%- include ("header") %> 
<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
        
    <div class="box">
            <% for( let i = 0; i < newListItems.length; i++ ) {%>
                <div class="item">
                <input type="checkbox">
                <p><%= newListItems[i] %></p>
                </div>
            <% } %>
            <form action="/" method="post" autocomplete="off">
                <input type="text" name="item" placeholder="New item">
                <button type="submit" value="<%= listTitle %>" name="submit">+</button>
            </form>
    </div>
    <%- include ("footer") %> 
</body>
</html>